{
    "name": "Netflix Anti-binge watching",
    "description": "Prevents you from binging your favorite show",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [ "https://www.netflix.com/watch/*" ],
    "icons": {
        "16": "/meditate.png",
        "32": "/meditate.png",
        "48": "/meditate.png",
        "128": "/meditate.png"
    }
}